generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model vp_user {
  id             String   @id @default(cuid())
  email          String   @unique
  password       String
  name           String
  company        String?
  phone          String?
  role           String   @default("client")
  created_at     DateTime @default(now())
  balance        Float    @default(0)
  last_bal_updated DateTime @updatedAt

  call_logs      vp_call_log[]
  transactions   vp_transaction[]
  credit_balance vp_credit_balance?
}

model vp_call_log {
  id          String    @id @default(cuid())
  user_id     String
  call_id     String    @unique
  gender      String?
  cost        Float?    @default(3.5)
  language    String?
  phone_number String?
  otp         String?
  status      String?
  duration    Int?      @default(0)
  created_at  DateTime  @default(now())
  start_time  DateTime?
  answer_time DateTime?
  callback_url String?   @default("")
  ring_time   Int?      @default(0)
  end_at      DateTime?
  webhook_sent Boolean?  @default(false)

  user vp_user @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  @@index([user_id])
  @@index([status])
}

model vp_transaction {
  id           String   @id @default(cuid())
  user_id      String
  type         String
  amount       Float
  balance_after Float
  description  String
  reference    String?
  created_at   DateTime @default(now())

  user vp_user @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  @@index([user_id])
  @@index([created_at])
}

model vp_credit_balance {
  user_id     String   @id
  balance     Float    @default(0)
  last_updated DateTime @updatedAt

  user vp_user @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
